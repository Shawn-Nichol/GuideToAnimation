<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyShapes.MyShapesFragment">

    <ImageView
        android:id="@+id/frag_shape_line_horizontal"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="236dp"
        android:layout_marginEnd="116dp"
        android:src="@drawable/my_line"
        app:layout_constraintEnd_toStartOf="@+id/frag_shape_line_vertical"
        app:layout_constraintTop_toBottomOf="@+id/frag_shape_rotation" />

    <ImageView
        android:id="@+id/frag_shape_line_vertical"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="236dp"
        android:layout_marginEnd="48dp"
        android:src="@drawable/my_line_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frag_shape_rotation" />

    <ImageView
        android:id="@+id/frag_shape_rotation"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/frag_shape_line_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Animation"
        app:layout_constraintEnd_toStartOf="@+id/frag_shape_level_list"
        app:layout_constraintStart_toStartOf="@+id/frag_shape_rotation"
        app:layout_constraintTop_toBottomOf="@+id/frag_shape_rotation" />

    <ImageView
        android:id="@+id/frag_shape_level_list"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/frag_shape_rotation"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/frag_shape_line_btn_level_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Animation"
        app:layout_constraintEnd_toEndOf="@+id/frag_shape_level_list"
        app:layout_constraintStart_toStartOf="@+id/frag_shape_level_list"
        app:layout_constraintTop_toBottomOf="@+id/frag_shape_level_list" />

</androidx.constraintlayout.widget.ConstraintLayout>